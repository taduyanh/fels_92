<div class="container">
  <div class="omb_login">
    <h3 class="omb_authTitle"><%= t('devise.sessions.title') %> <%= link_to t('devise.sessions.sign_up_title'), new_user_registration_path %></h3>
    <div class="row omb_row-sm-offset-3 omb_socialButtons">
      <div class="col-xs-6 col-sm-3">
        <a href= <%= user_omniauth_authorize_path(:facebook) %> class="btn btn-lg btn-block omb_btn-facebook">
          <span><%= t('devise.sessions.facebook') %></span>
        </a>
      </div>
      <div class="col-xs-6 col-sm-3">
        <a href= <%= user_omniauth_authorize_path(:google_oauth2) %> class="btn btn-lg btn-block omb_btn-google">
          <span><%= t('devise.sessions.google_oauth2') %></span>
        </a>
      </div>
    </div>

    <div class="row omb_row-sm-offset-3 omb_loginOr">
      <div class="col-xs-12 col-sm-6">
        <hr class="omb_hrOr">
        <span class="omb_spanOr">or</span>
      </div>
    </div>

    <div class="row omb_row-sm-offset-3">
      <div class="col-xs-12 col-sm-6">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'omb_loginForm'}) do |f| %>
          <div class="field input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('devise.sessions.placeholder_email') %>
          </div>
          <span class="help-block"></span>

          <div class="field input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('devise.sessions.placeholder_password') %>
          </div>
          <span class="help-block"></span>
          <div class="actions">
            <%= f.submit t('devise.sessions.submit'), class: 'btn btn-lg btn-primary btn-block' %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field input-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
        <% end %>
      </div>
    </div>
  </div>
</div>
